<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="/logs" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %date %level [%thread] %logger [%file:%line] %msg%n
            </Pattern>
        </layout>
    </appender>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/pihd.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%date %level [%thread] %logger [%file:%line] %msg%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 5 MegaBytes -->
            <fileNamePattern>${LOGS}/archived/pihd-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <springProfile name="Dev">
        <!-- LOG everything at INFO level -->
        <root level="trace">
            <appender-ref ref="RollingFile" />
        </root>
        <logger name="com.dxc.toyota.application" level="debug" additivity="false">
            <appender-ref ref="Console" />
        </logger>
        <logger name="org.apache.ibatis" level="debug" additivity="false">
            <appender-ref ref="Console" />
        </logger>
    </springProfile>
    <springProfile name="Prod">
        <!-- LOG everything at INFO level -->
        <root level="info">
            <appender-ref ref="RollingFile" />
        </root>

        <!-- LOG "com.dxc.application*" at TRACE level -->
        <logger name="com.dxc.toyota.application" level="info" additivity="false">
            <appender-ref ref="RollingFile" />
        </logger>
    </springProfile>

</configuration>